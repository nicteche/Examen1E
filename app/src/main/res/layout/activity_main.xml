<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textEspacio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:layout_margin="1dp"
        android:textSize="15dp"
        android:text=""
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="684dp" />
    <TextView
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:text="Bienvenido"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textEspacio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:layout_margin="1dp"
        android:textSize="15dp"
        android:text=""
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="684dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="170dp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="160dp"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/MegaCine"/>
    <TextView
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_margin="20dp"
        android:text="Trivia Magica"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textEspacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="1dp"
        android:textSize="15dp"
        android:text="Se contestaran 5 preguntas de manera aleatoria, en caso de contestar todas correctas ganaras una entrada al cine"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="684dp" />
    <Button
        android:id="@+id/btnIngreso"
        android:layout_width="305dp"
        android:layout_height="48dp"
        android:text="Empezar"
        android:onClick="ingresar"
        android:layout_margin="20dp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="422dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="1dp"
        android:textSize="15dp"
        android:text="Desarrollado por Nicholas Echeverria"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="684dp" />


</TableLayout>